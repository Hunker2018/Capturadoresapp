<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/infoca"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/colorBackground"/>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/textView3"></View>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/lblCAInfoCodigo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="123456"
                android:layout_weight="0.75"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblCAInfoUbicacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="UBIC.02:4444"
                android:layout_weight="0.75"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/lblCAInfoDescripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="NIVEA DESODORANTE DOUBLE EFFECT VIOLET SENSES STICK 40ML"
                android:layout_weight="0.75"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/lblCAInfofechacad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ult. Fecha Cad."
                android:layout_weight="0.75"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblCAInfoUltimaFechaCaducidad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="dd/mm/aaaa"
                android:layout_weight="0.75"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <TableLayout
                android:id="@+id/dgCAInfoLineas"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            </TableLayout>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/lblCAInfoStockAlmacen1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Stk Alm 01"
            android:layout_weight="0.75"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/lblCAInfoStockTotalALmacen1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Stk. Total Alm. 01"
            android:layout_weight="0.75"
            android:textStyle="bold" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/lblCAInfoStock1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="123456"
                android:layout_weight="0.75"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/lblCAInfoStockTotal1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="123456"
                android:layout_weight="0.75"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scrollbars="horizontal|vertical"
                    android:scrollbarStyle="outsideInset"
                    android:fillViewport="true">

                    <TableLayout
                        android:id="@+id/lbxUbicacionesxArticulo"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:isScrollContainer="true">
                    </TableLayout>
                </ScrollView>
            </LinearLayout>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <RadioGroup
                android:id="@+id/gruporadioca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cód. Barra"
                    android:checked="true"></RadioButton>
                <RadioButton
                    android:id="@+id/radio_articulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artículo"
                    ></RadioButton>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/lblCodigoBarra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/infocb"
                android:layout_weight="0.75"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <EditText
                android:id="@+id/txtCAInfoCB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:background="@drawable/background_input"
                android:ems="10"
                android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <Button
                android:id="@+id/btn_caInfoSalir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="0.75"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/casalir"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>